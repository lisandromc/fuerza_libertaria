<!DOCTYPE html>
<html class="has-navbar-fixed-top">
  <head>
    <title>Fuerza Libertaria Argentina</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag('application', media: 'all') %>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">

    <%= javascript_include_tag('application') %>
    <%= content_for(:head) %>
    <%= Gon::Base.render_data(camel_case: true, namespace: 'serverExports') %>

    <!-- Google Analytics  -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-109818858-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-109818858-1');
    </script>
  </head>

  <body id="<%= "#{controller_name}_#{action_name}" %>" data-controller="<%= controller_name %>" data-action="<%= action_name %>">
    <%= yield %>
  </body>
</html>
